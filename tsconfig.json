{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "target": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2022",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
